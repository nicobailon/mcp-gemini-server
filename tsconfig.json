{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "@app/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": [
    "src/**/*",
    "vitest-globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}